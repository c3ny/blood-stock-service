{
"categories": [
{
"title": "## 🚀 Features",
"labels": ["feature", "feat"]
},
{
"title": "## 🐛 Bug Fixes",
"labels": ["fix", "bugfix"]
},
{
"title": "## 📚 Documentation",
"labels": ["docs", "documentation"]
},
{
"title": "## 🔧 Maintenance",
"labels": ["chore", "refactor"]
}
],
"ignore_labels": [
"ignore"
],
"sort": "ASC",
"template": "${{CHANGELOG}}",
"pr_template": "- ${{TITLE}} (#${{NUMBER}})",
"empty_template": "- No changes",
"label_extractor": [
{
"pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test){1}(\\([\\w\\-\\.]+\\))?(!)?: ([\\w ])+([\\s\\S]*)",
"target": "$1"
}
]
}