# =========================
# DATABASE CONFIGURATION
# =========================

# For local development (using localhost)
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bloodstock"

# For Docker environment (using docker-compose service name)
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=bloodstock

# Composite database URL (auto-constructed in docker-compose)
DATABASE_URL="postgresql://postgres:postgres@db:5432/bloodstock"

# =========================
# APPLICATION CONFIGURATION
# =========================

NODE_ENV=production
PORT=3000

# =========================
# LOGGING (Optional)
# =========================

LOG_LEVEL=info
