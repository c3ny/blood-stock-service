{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@domain": ["src/domain"],
      "@domain/*": ["src/domain/*"],
      "@application": ["src/application"],
      "@application/*": ["src/application/*"],
      "@adapters": ["src/adapters"],
      "@adapters/*": ["src/adapters/*"]
    }
  }
}
